// -*- coding: utf-8 -*-

_lune_control limit_conv_code lua;
_lune_control default_async_all;

module OS require "os" of "Lua" {
   pub static fn getenv(name:str):str!;
}

pub fn getCurDir(): str {
   let path;
   __asyncLock {
      if! OS.getenv( "PWD" ) {
         path = _exp;
      } else {
         path = "./";
      }
   }
   return path;
}
